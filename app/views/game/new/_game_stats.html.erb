<table class="table-bordered">
  <tbody>
    <tr>
      <td><%= home_team %></td>
      <% game_stats.order(:row_number).each do |game_stat| %>
        <td><%= game_stat.home_score %></td>
      <% end %>
    </tr>
    <tr>
      <td><%= away_team %></td>
      <% game_stats.order(:row_number).each do |game_stat| %>
        <td><%= game_stat.away_score %></td>
      <% end %>
    </tr>
    <tr>
      <td>Hits</td>
      <% hits = 0 %>
      <% game_stats.order(:row_number).limit(game_stats.length - 3).each do |game_stat| %>
        <td><%= game_stat.hits %></td>
        <% hits = hits + game_stat.hits %>
      <% end %>
      <td colspan="3"><%= hits %></td>
    </tr>
    <tr>
      <td>Home Runs</td>
      <% home_runs = 0 %>
      <% game_stats.order(:row_number).limit(game_stats.length - 3).each do |game_stat| %>
        <td><%= game_stat.home_runs %></td>
        <% home_runs = home_runs + game_stat.home_runs %>
      <% end %>
      <td colspan="3"><%= home_runs %></td>
    </tr>
  </tbody>
</table>