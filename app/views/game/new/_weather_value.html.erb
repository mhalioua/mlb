    <td><%= "#{dew_min.round}-#{dew_max.round}" %><br><%= "#{(dew_min+1).round}-#{(dew_max-1).round}" %></td>
    <td><%= hum_min === hum_max ? hum_min : "#{hum_min}-#{hum_max}" %></td>
