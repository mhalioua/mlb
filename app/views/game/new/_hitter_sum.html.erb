<%
  left_hitter_ab = 0
  left_hitter_h = 0
  left_hitter_bb = 0
  left_hitter_hr = 0

  right_hitter_ab = 0
  right_hitter_h = 0
  right_hitter_bb = 0
  right_hitter_hr = 0

  away_hitters.each do |hitter|
    next if hitter.position == 'P'
    if hitter.hand == "L"
      left_hitter_ab += hitter.ab
      left_hitter_h += hitter.h
      left_hitter_bb += hitter.bb
      left_hitter_hr += hitter.hr
    elsif hitter.hand == "R"
      right_hitter_ab += hitter.ab
      right_hitter_h += hitter.h
      right_hitter_bb += hitter.bb
      right_hitter_hr += hitter.hr
     elsif home_pitcher.throw == 'L'
      right_hitter_ab += hitter.ab
      right_hitter_h += hitter.h
      right_hitter_bb += hitter.bb
      right_hitter_hr += hitter.hr
     else
      left_hitter_ab += hitter.ab
      left_hitter_h += hitter.h
      left_hitter_bb += hitter.bb
      left_hitter_hr += hitter.hr
    end
  end

  home_hitters.each do |hitter|
    next if hitter.position == 'P'
    if hitter.hand == "L"
      left_hitter_ab += hitter.ab
      left_hitter_h += hitter.h
      left_hitter_bb += hitter.bb
      left_hitter_hr += hitter.hr
    elsif hitter.hand == "R"
      right_hitter_ab += hitter.ab
      right_hitter_h += hitter.h
      right_hitter_bb += hitter.bb
      right_hitter_hr += hitter.hr
     elsif away_pitcher.throw == 'L'
      right_hitter_ab += hitter.ab
      right_hitter_h += hitter.h
      right_hitter_bb += hitter.bb
      right_hitter_hr += hitter.hr
     else
      left_hitter_ab += hitter.ab
      left_hitter_h += hitter.h
      left_hitter_bb += hitter.bb
      left_hitter_hr += hitter.hr
    end
  end
%>
