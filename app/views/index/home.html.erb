<% content_for :title, "Home Page" %>
<div class="panel panel-primary text-center">
	<div class="panel-heading">
		<h1>Home Page</h1>
	</div>
	<div class="panel-body">
		<ul class="list-group">
			<li class="list-group-item"><%= link_to @yesterday.strftime("%B %e"),	{ action: 'game', id: @yesterday.strftime("%Y-%m-%d") + " - " + @yesterday.strftime("%Y-%m-%d") } %></li>
			<li class="list-group-item"><%= link_to @today.strftime("%B %e"),		{ action: 'game', id: @today.strftime("%Y-%m-%d") + " - " + @today.strftime("%Y-%m-%d") } %></li>
			<li class="list-group-item"><%= link_to @tomorrow.strftime("%B %e"),	{ action: 'game', id: @tomorrow.strftime("%Y-%m-%d") + " - " + @tomorrow.strftime("%Y-%m-%d") } %></li>
			<li class="list-group-item"><%= link_to 'MLB Calculator',			  		{ controller: 'calc', action: 'input' } %></li>
			<li class="list-group-item"><%= link_to 'Sign Out',							{ controller: 'access', action: 'logout' } %></li>
		</ul>
	</div>
</div>
